{
    "compilerOptions": {
        "lib": [
            "es2018",
            "dom"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./lib",
        "strict": true
    },
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
